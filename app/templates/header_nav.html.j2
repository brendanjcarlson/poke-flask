<header>
    <nav class="nav container">
        <div>
            <a class='nav-link-animated' href="{{ url_for('home.home_page') }}">
                <img src="{{ url_for('static', filename='pokeball.png') }}" alt="">
                <h1>PokeBattle</h1>
            </a>
            {% if user.is_authenticated %}
            <a href="{{ url_for('poke.poke_team', username=user.username) }}"> {{ user.username }}&apos;s team</a>
            <a href="{{ url_for('poke.poke_search') }}">Find pokemans!</a>
            {% endif %}
        </div>
        <div>
            {% if not user.is_authenticated %}
            <a class='btn btn-yellow' href="{{ url_for('auth.register_page') }}">Register</a>
            <a class='btn btn-blue' href="{{ url_for('auth.login_page') }}">Login</a>
            {% else %}
            <a class='btn btn-blue' href="{{ url_for('auth.logout') }}">Logout</a>
            {% endif %}
        </div>
    </nav>
</header>