{% extends 'layout.html.j2' %}


{% block content %}
<h2>Register</h2>

<form class='form' method="POST">
    {{ form.hidden_tag() }}
    <div class="form-inputs">
        {{ form.username(class='form-row') }}
        {{ form.email(class='form-row') }}
        {{ form.password(class='form-row') }}
        {{ form.confirm_password(class='form-row') }}
    </div>
    <div class="form-btns">
        {{ form.submit(class='btn btn-yellow') }}
    </div>
    <p>Already have an account?<a href="{{ url_for('auth.login_page') }}">Login</a></p>
</form>

{% endblock %}